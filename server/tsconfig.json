{
  "compilerOptions": {
    "types": ["node", "jest"],
    "target": "ES2018",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "noEmit": true,
    "lib": ["es2015"],
    "noUnusedLocals": true,
    "incremental": true,
  },
  "include": ["src/**/*", "__tests__/**/*"],
  "exclude": ["node_modules", "dist", "remotion.config.ts"]
}